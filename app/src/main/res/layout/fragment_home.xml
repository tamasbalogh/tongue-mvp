<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/fragmentHomeTextViewUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:text="@string/welcome"
        android:textColor="@color/text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fragmentHomeCircleImageViewProfilePic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        app:civ_border_color="@color/text"
        app:civ_border_width="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentHomeTextViewUserName" />

    <Button
        android:id="@+id/fragmentHomeButtonLetsStart"
        style="@style/buttonStyle"
        android:layout_marginTop="78dp"
        android:text="@string/lets_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentHomeCircleImageViewProfilePic" />

    <ImageView
        android:id="@+id/fragmentHomeImageViewLogo"
        style="@style/tongue_logo"
        android:layout_width="336dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentHomeButtonLetsStart" />

    <ProgressBar
        android:id="@+id/fragmentHomeProgressBar"
        android:visibility="invisible"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/fragmentHomeCircleImageViewProfilePic"
        app:layout_constraintEnd_toEndOf="@+id/fragmentHomeCircleImageViewProfilePic"
        app:layout_constraintStart_toStartOf="@+id/fragmentHomeCircleImageViewProfilePic"
        app:layout_constraintTop_toTopOf="@+id/fragmentHomeCircleImageViewProfilePic" />


</android.support.constraint.ConstraintLayout>