<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/fragmentResultTextViewScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:text="100%"
        android:textColor="@color/text"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragmentResultTextViewScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:text="Excellent!"
        android:textColor="@color/text"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentResultTextViewScore" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/fragmentResultImageViewStar1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/star_once"
        app:layout_constraintBottom_toBottomOf="@+id/fragmentResultImageViewStar2"
        app:layout_constraintEnd_toStartOf="@+id/fragmentResultImageViewStar2"
        app:layout_constraintTop_toTopOf="@+id/fragmentResultImageViewStar2"
        android:visibility="gone"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/fragmentResultImageViewStar2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/star_once"
        app:layout_constraintBottom_toTopOf="@+id/fragmentResultButtonNewGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentResultTextViewScoreText"
        android:visibility="gone"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/fragmentResultImageViewStar3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/star_once"
        app:layout_constraintBottom_toBottomOf="@+id/fragmentResultImageViewStar2"
        app:layout_constraintStart_toEndOf="@+id/fragmentResultImageViewStar2"
        app:layout_constraintTop_toTopOf="@+id/fragmentResultImageViewStar2"
        android:visibility="gone"/>

    <Button
        android:id="@+id/fragmentResultButtonNewGame"
        style="@style/buttonStyle"
        android:layout_marginTop="64dp"
        android:text="New Game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fragmentResultButtonGoToHome"
        style="@style/buttonStyle"
        android:layout_marginTop="24dp"
        android:text="Home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentResultButtonNewGame" />

    <ImageView
        android:id="@+id/fragmentResultImageViewLogo"
        style="@style/tongue_logo"
        android:layout_width="336dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentResultButtonGoToHome" />



</android.support.constraint.ConstraintLayout>